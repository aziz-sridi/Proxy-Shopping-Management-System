<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AdminUsersController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    
    <!-- Title -->
    <Label text="User Management" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <!-- Create User Section -->
    <VBox spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 15;">
        <Label text="Create New User" style="-fx-font-weight: bold; -fx-font-size: 14;" />
        
        <HBox spacing="10.0">
            <VBox spacing="5.0" prefWidth="200.0">
                <Label text="Username" />
                <TextField fx:id="newUsernameField" promptText="Enter username" />
            </VBox>
            
            <VBox spacing="5.0" prefWidth="200.0">
                <Label text="Password" />
                <PasswordField fx:id="newPasswordField" promptText="Enter password" />
            </VBox>
            
            <VBox spacing="5.0" prefWidth="150.0">
                <Label text="Role" />
                <ComboBox fx:id="roleComboBox" prefWidth="150.0" />
            </VBox>
            
            <VBox spacing="5.0" alignment="BOTTOM_LEFT" prefWidth="120.0">
                <Button fx:id="createButton" mnemonicParsing="false" onAction="#handleCreateUser" prefWidth="120.0" text="Create User" />
            </VBox>
        </HBox>
        
        <Label fx:id="createMessageLabel" />
    </VBox>
    
    <!-- Users Table Section -->
    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <Label text="All Users" style="-fx-font-weight: bold; -fx-font-size: 14;" />
        
        <TableView fx:id="usersTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="userIdColumn" minWidth="80.0" prefWidth="80.0" text="User ID" />
                <TableColumn fx:id="usernameColumn" minWidth="150.0" prefWidth="150.0" text="Username" />
                <TableColumn fx:id="roleColumn" minWidth="100.0" prefWidth="100.0" text="Role" />
                <TableColumn fx:id="createdAtColumn" minWidth="200.0" prefWidth="200.0" text="Created At" />
                <TableColumn fx:id="actionColumn" minWidth="100.0" prefWidth="100.0" text="Action" />
            </columns>
        </TableView>
    </VBox>
    
    <Label fx:id="messageLabel" />
</VBox>
