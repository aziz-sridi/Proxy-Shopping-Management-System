<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane styleClass="page-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.viewController.ClientsViewController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="modern-container" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Search:" />
            <TextField fx:id="txtSearch" promptText="Search clients by name or phone..." styleClass="modern-field" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNewClient" mnemonicParsing="false" styleClass="modern-button" text="+ New Client" />
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="table" styleClass="modern-table" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colId" text="ID" />
          <TableColumn fx:id="colUsername" text="Username" />
            <TableColumn fx:id="colPhone" text="Phone" />
            <TableColumn fx:id="colSource" text="Source" />
            <TableColumn fx:id="colAddress" text="Address" />
            <TableColumn fx:id="colOrder" text="New Order" />
            <TableColumn fx:id="colActions" text="Actions" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
